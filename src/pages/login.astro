---
import Layout from '../layouts/Layout.astro';
import { getSessionFromCookie, isValidSession } from '../lib/auth';

export const prerender = false;

// Verificar si ya est√° logueado
const cookieHeader = Astro.request.headers.get('cookie');
const token = getSessionFromCookie(cookieHeader);

// Redirigir si ya est√° autenticado
if (isValidSession(token)) {
  return Astro.redirect('/admin');
}
---

<Layout title="Login - DMO Seals">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      <div class="bg-slate-800 rounded-xl shadow-2xl border border-slate-700/50 p-8">
        <div class="text-center mb-8">
          <h1 class="text-2xl font-bold text-white">üîê Admin Login</h1>
          <p class="text-sm text-slate-400 mt-2">DMO Seal Master</p>
        </div>

        <form id="login-form" class="space-y-6">
          <div>
            <label for="password" class="block text-sm font-medium text-slate-300 mb-2">
              Contrase√±a de Admin
            </label>
            <input
              type="password"
              id="password"
              name="password"
              required
              class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:outline-none focus:border-dmo-primary focus:ring-1 focus:ring-dmo-primary"
              placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
            />
          </div>

          <div id="error-message" class="hidden p-3 bg-red-500/20 border border-red-500/50 rounded-lg text-red-400 text-sm">
          </div>

          <button
            type="submit"
            class="w-full py-3 px-4 bg-dmo-primary hover:bg-dmo-primary/90 text-white font-medium rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-dmo-primary focus:ring-offset-2 focus:ring-offset-slate-800"
          >
            Ingresar
          </button>
        </form>

        <div class="mt-6 text-center">
          <a href="/" class="text-sm text-slate-400 hover:text-dmo-primary transition-colors">
            ‚Üê Volver al inicio
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById('login-form') as HTMLFormElement;
  const errorDiv = document.getElementById('error-message') as HTMLDivElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const password = formData.get('password') as string;

    errorDiv.classList.add('hidden');

    try {
      const response = await fetch('/api/auth/login', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ password })
      });

      const data = await response.json();

      if (response.ok) {
        window.location.href = '/admin';
      } else {
        errorDiv.textContent = data.error || 'Error de autenticaci√≥n';
        errorDiv.classList.remove('hidden');
      }
    } catch (error) {
      errorDiv.textContent = 'Error de conexi√≥n';
      errorDiv.classList.remove('hidden');
    }
  });
</script>
